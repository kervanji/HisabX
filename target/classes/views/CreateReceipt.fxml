<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hisabx.controller.CreateReceiptController"
      spacing="15" prefWidth="700" prefHeight="550"
      style="-fx-background-color: #f8fafc;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="إنشاء إيصال جديد" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1f3c56;"/>
    
    <HBox spacing="15" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="البحث عن فاتورة:" style="-fx-font-weight: bold;"/>
            <HBox spacing="10">
                <TextField fx:id="saleSearchField" promptText="رقم الفاتورة أو اسم العميل..." prefWidth="300"/>
                <Button text="بحث" onAction="#handleSearchSale" 
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 8 16;"/>
            </HBox>
        </VBox>
    </HBox>
    
    <TableView fx:id="salesTable" VBox.vgrow="ALWAYS" prefHeight="200">
        <columns>
            <TableColumn fx:id="saleCodeColumn" text="رقم الفاتورة" prefWidth="100"/>
            <TableColumn fx:id="customerNameColumn" text="العميل" prefWidth="150"/>
            <TableColumn fx:id="saleDateColumn" text="التاريخ" prefWidth="120"/>
            <TableColumn fx:id="totalAmountColumn" text="المبلغ" prefWidth="100"/>
            <TableColumn fx:id="paymentStatusColumn" text="الحالة" prefWidth="80"/>
            <TableColumn fx:id="hasReceiptColumn" text="إيصال" prefWidth="80"/>
        </columns>
        <placeholder>
            <Label text="ابحث عن فاتورة لإنشاء إيصال لها"/>
        </placeholder>
    </TableView>
    
    <Separator/>
    
    <VBox spacing="10" fx:id="receiptDetailsBox" disable="true">
        <Label text="تفاصيل الإيصال:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="قالب الإيصال:"/>
                <ComboBox fx:id="templateComboBox" prefWidth="200"/>
            </VBox>
            <VBox spacing="5">
                <Label text="ملاحظات:"/>
                <TextField fx:id="receiptNotesField" prefWidth="300" promptText="ملاحظات إضافية (اختياري)"/>
            </VBox>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <CheckBox fx:id="printAfterCreateCheckBox" text="طباعة بعد الإنشاء" selected="true"/>
        </HBox>
    </VBox>
    
    <Separator/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="إنشاء الإيصال" onAction="#handleCreateReceipt" fx:id="createButton" disable="true"
                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 6;"/>
        <Button text="إغلاق" onAction="#handleClose"
                style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 6;"/>
    </HBox>
    
    <Label fx:id="statusLabel" text="اختر فاتورة لإنشاء إيصال لها" style="-fx-text-fill: #6b7280;"/>
</VBox>
