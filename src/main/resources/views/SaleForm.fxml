<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hisabx.controller.SaleFormController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="إنشاء فاتورة بيع جديدة" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
        <!-- Left Panel - Customer and Items -->
        <VBox spacing="12" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Top Controls Section -->
            <HBox spacing="20">
                <!-- Product Selection -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="إضافة منتج: (ابحث بالاسم أو الكود أو الباركود)" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox spacing="10" alignment="BOTTOM_LEFT">
                        <VBox spacing="2">
                            <Label text="الفئة" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                            <ComboBox fx:id="categoryFilterComboBox" promptText="كل الفئات" prefWidth="140"/>
                        </VBox>
                        <VBox spacing="2" HBox.hgrow="ALWAYS">
                            <Label text="المنتج" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                            <ComboBox fx:id="productComboBox" promptText="ابحث عن المنتج..." maxWidth="Infinity"/>
                        </VBox>
                        <VBox spacing="2">
                            <Label text="الكمية للبيع" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                            <TextField fx:id="quantityField" promptText="1" prefWidth="70"/>
                        </VBox>
                        <Button text="+ إضافة" onAction="#handleAddItem" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="100"/>
                    </HBox>
                    <HBox spacing="15">
                        <Label fx:id="stockLabel" text="المخزون المتاح: -" style="-fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="priceLabel" text="السعر: -" style="-fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </VBox>

                <!-- Customer Selection -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="اختر العميل: (ابحث بالاسم أو الكود أو رقم الهاتف)" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ComboBox fx:id="customerComboBox" promptText="ابحث عن العميل..." maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        <Button text="+ عميل جديد" onAction="#handleNewCustomer" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="موقع المشروع:" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="projectLocationComboBox" promptText="اختر موقع المشروع..." maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="newProjectLocationField" promptText="أو أضف موقع جديد..." prefWidth="150"/>
                        <Button fx:id="addProjectLocationBtn" text="+ إضافة موقع" onAction="#handleAddProjectLocation" style="-fx-background-color: #9b59b6; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </HBox>

            <Separator/>

            <!-- Items Table -->
            <VBox spacing="8" VBox.vgrow="ALWAYS">
                <Label text="المنتجات المضافة:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS" minHeight="0" editable="true">
                    <columns>
                        <TableColumn fx:id="productNameColumn" text="المنتج" prefWidth="180"/>
                        <TableColumn fx:id="quantityColumn" text="الكمية" prefWidth="80"/>
                        <TableColumn fx:id="unitPriceColumn" text="السعر" prefWidth="90"/>
                        <TableColumn fx:id="discountColumn" text="الخصم" prefWidth="70"/>
                        <TableColumn fx:id="totalColumn" text="الإجمالي" prefWidth="90"/>
                        <TableColumn fx:id="editColumn" text="تعديل" prefWidth="60"/>
                        <TableColumn fx:id="actionColumn" text="حذف" prefWidth="60"/>
                    </columns>
                    <placeholder>
                        <Label text="لم تتم إضافة منتجات بعد"/>
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>

        <!-- Right Panel - Payment and Summary -->
        <ScrollPane prefWidth="320" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background-color: white; -fx-background: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <content>
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

            <!-- Payment Method -->
            <VBox spacing="8">
                <Label text="طريقة الدفع:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10">
                    <RadioButton fx:id="cashRadio" text="نقدي" toggleGroup="$paymentGroup"/>
                    <RadioButton fx:id="creditRadio" text="دين" toggleGroup="$paymentGroup"/>
                </HBox>
                <fx:define>
                    <ToggleGroup fx:id="paymentGroup"/>
                </fx:define>
            </VBox>

            <VBox spacing="8">
                <Label text="عملة الدفع:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="currencyComboBox" prefWidth="150"/>
            </VBox>

            <VBox fx:id="exchangeRateBox" spacing="8" visible="false" managed="false">
                <Label text="سعر الصرف:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="exchangeRateField" promptText="مثال: 1500" prefWidth="150" onKeyReleased="#handleExchangeRateChange"/>
                    <Label text="دينار لكل دولار"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Additional Discount -->
            <VBox spacing="8">
                <Label text="خصم إضافي:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="additionalDiscountField" promptText="0.00" prefWidth="100" onKeyReleased="#handleDiscountChange"/>
                    <Label fx:id="additionalDiscountCurrencyLabel" text="دينار"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Summary -->
            <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-background-radius: 8;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <HBox alignment="CENTER_LEFT">
                    <Label text="المجموع:" prefWidth="120" style="-fx-font-size: 14px;"/>
                    <Label fx:id="subtotalLabel" text="0 دينار" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
                
                <HBox alignment="CENTER_LEFT">
                    <Label text="الخصم:" prefWidth="120" style="-fx-font-size: 14px;"/>
                    <Label fx:id="discountLabel" text="0 دينار" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c;"/>
                </HBox>
                
                <HBox alignment="CENTER_LEFT">
                    <Label text="الإجمالي النهائي:" prefWidth="120" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="finalTotalLabel" text="0 دينار" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                </HBox>
            </VBox>

            <Separator/>

            <!-- Paid Amount -->
            <VBox spacing="8">
                <Label text="المبلغ المدفوع:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="paidAmountField" promptText="0" prefWidth="150" onKeyReleased="#handlePaidAmountChange"/>
                    <Label fx:id="paidAmountCurrencyLabel" text="دينار"/>
                </HBox>
            </VBox>

            <!-- Balance Display -->
            <VBox spacing="8" style="-fx-background-color: #fff3cd; -fx-background-radius: 8;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <HBox alignment="CENTER_LEFT">
                    <Label text="الرصيد:" prefWidth="100" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label fx:id="balanceLabel" text="0 دينار" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </HBox>
                <Label fx:id="balanceStatusLabel" text="" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
            </VBox>

            <Separator/>

            <!-- Notes -->
            <TitledPane text="اكتب ملاحظة" expanded="false" collapsible="true">
                <content>
                    <TextArea fx:id="notesArea" promptText="أدخل أي ملاحظات..." prefRowCount="3"/>
                </content>
            </TitledPane>

            <!-- Action Buttons -->
            <VBox spacing="10" VBox.vgrow="ALWAYS" alignment="BOTTOM_CENTER">
                <Button text="حفظ وطباعة الفاتورة" onAction="#handleSaveAndPrint" prefWidth="280" prefHeight="45"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Button text="إلغاء" onAction="#handleCancel" prefWidth="280" prefHeight="35"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;"/>
            </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </HBox>
</VBox>
