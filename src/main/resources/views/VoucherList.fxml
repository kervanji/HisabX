<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hisabx.controller.VoucherListController"
      stylesheets="@../styles/main.css"
      spacing="15" prefWidth="900" prefHeight="600"
      style="-fx-background-color: #f8fafc; -fx-padding: 20; -fx-font-family: 'Geeza Pro', 'SF Arabic', 'Arial', 'Tahoma';">
    
    <!-- Header -->
    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
        <Label fx:id="titleLabel" text="السندات" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e3a5f;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <!-- Search & Filter -->
        <TextField fx:id="searchField" promptText="بحث..." prefWidth="200"
                   style="-fx-padding: 8; -fx-background-radius: 8;"/>
        <DatePicker fx:id="fromDatePicker" promptText="من تاريخ" prefWidth="140"/>
        <DatePicker fx:id="toDatePicker" promptText="إلى تاريخ" prefWidth="140"/>
        <Button text="بحث" onAction="#handleSearch"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8;"/>
    </HBox>
    
    <!-- Vouchers Table -->
    <TableView fx:id="vouchersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="voucherNumberCol" text="رقم السند" prefWidth="100"/>
            <TableColumn fx:id="dateCol" text="التاريخ" prefWidth="120"/>
            <TableColumn fx:id="customerCol" text="الحساب" prefWidth="180"/>
            <TableColumn fx:id="amountCol" text="المبلغ" prefWidth="120"/>
            <TableColumn fx:id="currencyCol" text="العملة" prefWidth="80"/>
            <TableColumn fx:id="descriptionCol" text="البيان" prefWidth="200"/>
            <TableColumn fx:id="createdByCol" text="بواسطة" prefWidth="100"/>
        </columns>
    </TableView>
    
    <!-- Summary -->
    <HBox spacing="30" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <HBox spacing="10">
            <Label text="إجمالي السندات:" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalCountLabel" text="0"/>
        </HBox>
        <HBox spacing="10">
            <Label text="إجمالي المبالغ (دينار):" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalIqdLabel" text="0"/>
        </HBox>
        <HBox spacing="10">
            <Label text="إجمالي المبالغ (دولار):" style="-fx-font-weight: bold;"/>
            <Label fx:id="totalUsdLabel" text="0"/>
        </HBox>
    </HBox>
    
    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <Button text="عرض التفاصيل" onAction="#viewVoucherDetails"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 8;"/>
        <Button text="طباعة" onAction="#printVoucher"
                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 8;"/>
        <Button text="إلغاء السند" onAction="#cancelVoucher"
                style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 8;"/>
        <Button text="إغلاق" onAction="#handleClose"
                style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 8;"/>
    </HBox>
    
</VBox>
