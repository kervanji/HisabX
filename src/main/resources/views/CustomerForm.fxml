<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.hisabx.controller.CustomerController"
      stylesheets="@../styles/main.css"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom right, #0f1b2d, #1a2744); -fx-padding: 24; -fx-font-family: 'Geeza Pro', 'SF Arabic', 'Arial', 'Tahoma';">
    
    <!-- Header -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label fx:id="formTitleLabel" text="إضافة عميل جديد" 
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;"/>
    </HBox>
    
    <!-- Form Grid -->
    <GridPane hgap="16" vgap="14" style="-fx-background-color: #10233d; -fx-padding: 24; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 14, 0, 0, 6);">
        
        <!-- Customer Code -->
        <Label text="كود العميل:" GridPane.columnIndex="1" GridPane.rowIndex="0"
               style="-fx-font-size: 14px; -fx-text-fill: #e8edf4; -fx-font-weight: bold;"/>
        <TextField fx:id="customerCodeField" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   promptText="سيتم توليده تلقائياً" editable="false"
                   style="-fx-background-color: #1a2744; -fx-text-fill: #e8edf4; -fx-prompt-text-fill: #607d8b; -fx-padding: 10; -fx-background-radius: 8; -fx-pref-width: 250;"/>
        
        <!-- Customer Name -->
        <Label text="اسم العميل: *" GridPane.columnIndex="1" GridPane.rowIndex="1"
               style="-fx-font-size: 14px; -fx-text-fill: #e8edf4; -fx-font-weight: bold;"/>
        <TextField fx:id="customerNameField" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   promptText="أدخل اسم العميل"
                   style="-fx-background-color: #1a2744; -fx-text-fill: #e8edf4; -fx-prompt-text-fill: #607d8b; -fx-padding: 10; -fx-background-radius: 8; -fx-pref-width: 250;"/>
        
        <!-- Phone Number -->
        <Label text="رقم الهاتف (07...): *" GridPane.columnIndex="1" GridPane.rowIndex="2"
               style="-fx-font-size: 14px; -fx-text-fill: #e8edf4; -fx-font-weight: bold;"/>
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   promptText="07xxxxxxxx"
                   style="-fx-background-color: #1a2744; -fx-text-fill: #e8edf4; -fx-prompt-text-fill: #607d8b; -fx-padding: 10; -fx-background-radius: 8; -fx-pref-width: 250;"/>
        
        <!-- Address -->
        <Label text="العنوان:" GridPane.columnIndex="1" GridPane.rowIndex="3"
               style="-fx-font-size: 14px; -fx-text-fill: #e8edf4; -fx-font-weight: bold;"/>
        <TextField fx:id="addressField" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   promptText="عنوان العميل"
                   style="-fx-background-color: #1a2744; -fx-text-fill: #e8edf4; -fx-prompt-text-fill: #607d8b; -fx-padding: 10; -fx-background-radius: 8; -fx-pref-width: 250;"/>
        
        <!-- Project Location -->
        <Label text="مواقع المشاريع: *" GridPane.columnIndex="1" GridPane.rowIndex="4"
               style="-fx-font-size: 14px; -fx-text-fill: #e8edf4; -fx-font-weight: bold;"/>
        <TextArea fx:id="projectLocationsArea" GridPane.columnIndex="0" GridPane.rowIndex="4"
                  promptText="اكتب كل موقع في سطر منفصل"
                  prefRowCount="3"
                  style="-fx-background-color: #1a2744; -fx-text-fill: #e8edf4; -fx-prompt-text-fill: #607d8b; -fx-padding: 10; -fx-background-radius: 8; -fx-pref-width: 250;"/>
        
        <columnConstraints>
            <javafx.scene.layout.ColumnConstraints hgrow="ALWAYS"/>
            <javafx.scene.layout.ColumnConstraints hgrow="NEVER" minWidth="120"/>
        </columnConstraints>
    </GridPane>
    
    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="12">
        <Button fx:id="saveButton" text="حفظ" onAction="#handleSave"
                style="-fx-background-color: linear-gradient(to right, #10b981, #059669); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 32; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button text="إلغاء" onAction="#handleCancel"
                style="-fx-background-color: #1a2744; -fx-text-fill: #e8edf4; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 32; -fx-background-radius: 8; -fx-cursor: hand; -fx-border-color: rgba(255,255,255,0.12); -fx-border-radius: 8;"/>
    </HBox>
</VBox>
